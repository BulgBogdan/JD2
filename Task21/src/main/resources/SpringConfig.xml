<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:aop="http://www.springframework.org/schema/aop" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.0.xsd     http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd http://www.springframework.org/schema/aop https://www.springframework.org/schema/aop/spring-aop.xsd">
    <context:annotation-config/>
    <bean name="sendMessage" class="by.spring.service.SendMessage" p:message="text message"/>


    <bean name="aspect" class="by.spring.aspect.Aspect"/>
    <aop:config>
        <aop:aspect ref="aspect">
            <aop:before pointcut="execution(* by.spring.service.SendMessage.send())"
                        method="before"/>
            <aop:after pointcut="execution(* by.spring.service.SendMessage.send())"
                       method="after"/>
            <aop:after-throwing method="throwException"
                                pointcut="execution(* by.spring.service.SendMessage.sendException())"/>
        </aop:aspect>

    </aop:config>
</beans>